<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="SeedSync.App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SeedSync.App"
    xmlns:views="using:SeedSync.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top panel: + button left of app name labels (drag region); system min/max/close on right -->
        <Grid Grid.Row="0" MinHeight="48" Padding="24,12,24,12" Loaded="MainPage_Loaded"
              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- + button to the left of the app name -->
            <DropDownButton Grid.Column="0" Content="+" FontSize="18" ToolTipService.ToolTip="Add Share"
                            Margin="0,0,16,0" VerticalAlignment="Center">
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Text="Create new share" Click="CreateShare_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE710;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Add existing share" Click="AddShare_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE8F4;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>

            <!-- Draggable title bar (SetTitleBar in code-behind): app name + subtitle -->
            <Border x:Name="AppTitleBar" Grid.Column="1" Background="Transparent"
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    Padding="0,0,24,0">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="S.E.E.D."
                               FontSize="22"
                               FontWeight="SemiBold"
                               Style="{StaticResource MyLabel}"/>
                    <TextBlock Text="Secure Environment Exchange Daemon"
                               FontSize="11"
                               Opacity="0.8"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Bottom panel: currently setup shares; slightly different color from top -->
        <Grid Grid.Row="1" Padding="24,0,24,24"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <ListView x:Name="SharesList"
                     SelectionMode="None"
                     Background="Transparent">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="views:ShareViewModel">
                        <Border Padding="12,10" Margin="0,0,0,8" CornerRadius="8"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="{x:Bind LocalPath}" FontSize="12" Opacity="0.8"
                                           TextTrimming="CharacterEllipsis"/>
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                    <TextBlock Text="{x:Bind Status}" FontSize="11" Opacity="0.7"/>
                                    <TextBlock FontSize="11" Opacity="0.7">
                                        <Run Text="Peers: "/>
                                        <Run Text="{x:Bind ConnectedPeers}"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <Button Content="Remove" Tag="{x:Bind Id}" Click="RemoveShare_Click"
                                        ToolTipService.ToolTip="Remove share"/>
                            </StackPanel>
                        </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <StackPanel x:Name="EmptyState"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="Collapsed">
                <FontIcon Glyph="&#xE8B7;" FontSize="48" Opacity="0.5"/>
                <TextBlock Text="No shares yet" FontSize="20" Opacity="0.7" Margin="0,16,0,8"/>
                <TextBlock Text="Click + to create or add a share" FontSize="14" Opacity="0.5"/>
            </StackPanel>

            <InfoBar x:Name="ErrorBar"
                     VerticalAlignment="Bottom"
                     Severity="Error"
                     IsOpen="False"/>
        </Grid>
    </Grid>
</Page>
